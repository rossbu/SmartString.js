                "step4": "git push --tags",
                "step5": "npm publish --tag beta",
                "step6": "npm info smartstring.js"
            }
        ]
    },
    {
        "semantic release": [
            {
                "cli": "npm install -g semantic-release-cli",
                "run": "semantic-release-cli setup",
