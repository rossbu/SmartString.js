{
    "name": "smartstring.js",
    "description": "Java script Utils for general purpose",
    "repository": {
        "type": "git",
        "url": "https://github.com/rossbu/SmartString.js.git"
    },
    "keywords": [
        "javascript",
        "js",
        "StringUtils",
        "String",
        "SS"
    ],
    "author": "rossbu",
    "license": "ISC",
    "dependencies": {},
    "devDependencies": {
        "chai": "3.5.0",
        "codecov.io": "0.1.6",
        "commitizen": "2.9.5",
        "cz-conventional-changelog": "1.2.0",
        "gulp": "3.9.1",
        "gulp-browserify": "0.5.1",
        "gulp-buffer": "0.0.2",
        "gulp-mocha": "2.0.0",
        "gulp-rename": "1.2.0",
        "gulp-rimraf": "^0.1.1",
        "gulp-sourcemaps": "2.3.1",
        "gulp-tap": "0.1.3",
        "gulp-uglify": "1.1.0",
        "husky": "0.12.0",
        "i": "0.3.5",
        "istanbul": "*",
        "mocha": "*",
        "mochify": "^2.9.0",
        "reactify": "1.1.1",
        "semantic-release": "^6.3.2",
        "uglify-js": "1.3.x"
    },
    "czConfig": {
        "path": "node_modules/cz-conventional-changelog"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "main": "lib/SmartString",
    "scripts": {
        "commit": "git-cz",
        "test": "gulp test",
        "mocha": "mocha",
        "mochaw": "./node_modules/.bin/mocha  -w --opts ./mocha.opts './test/**/*.spec.js'",
        "istanbul": "node_modules/.bin/istanbul  cover --report html ./node_modules/mocha/bin/_mocha -- --recursive -R spec test/*.test.js",
        "semantic-release": "semantic-release pre && npm publish && semantic-release post",
        "precommit": "npm run test && npm run check-coverage",
        "prepush": "npm run test",
        "check-coverage": "node_modules/.bin/istanbul check-coverage  --root coverage --statements 50 --branches 45 --functions 30 --lines 30"
    },
    "bugs": {
        "url": "https://github.com/rossbu/SmartString.js/issues"
    },
    "homepage": "https://github.com/rossbu/SmartString.js#readme"
}